[palette]
os = "#ACB0BE"
closer = "p:os"
pink = "#F5C2E7"
lavender = "#B4BEFE"
blue = "#89B4FA"

[[blocks]]
alignment = "left"
type = "prompt"

  [[blocks.segments]]
  foreground = "p:os"
  style = "plain"
  template = "{{.Icon}} "
  type = "os"

  [[blocks.segments]]
  foreground = "p:blue"
  style = "plain"
  template = "{{ .UserName }}@{{ .HostName }} "
  type = "session"

  [[blocks.segments]]
  foreground = "p:pink"
  style = "plain"
  template = "{{ .Path }} "
  type = "path"
  
    [blocks.segments.properties]
    folder_icon = "..\\ue5fe.."
    home_icon = "~"
    style = "agnoster_short"

  [[blocks.segments]]
  foreground = "p:lavender"
  style = "plain"
  template = "{{ .HEAD }} "
  type = "git"
  
    [blocks.segments.properties]
    branch_icon = "\\ue725 "
    cherry_pick_icon = "\\ue29b "
    commit_icon = "\\uf417 "
    fetch_status = false
    fetch_upstream_icon = false
    merge_icon = "\\ue727 "
    no_commits_icon = "\\uf0c3 "
    rebase_icon = "\\ue728 "
    revert_icon = "\\uf0e2 "
    tag_icon = "\\uf412 "

  [[blocks.segments]]
  style = "plain"
  foreground = "p:closer"
  template = "\\uf105"
  type = "text"
